{
  "name": "tmodloader-tutorial-site",
  "version": "1.0.0",
  "description": "泰拉瑞亚Mod制作教程网站",
  "main": "site/tooling/generate-index.js",
  "scripts": {
    "generate-structure": "node site/tooling/generate-structure.js",
    "generate-search": "node site/tooling/generate-search.js",
    "generate-routes": "node site/tooling/scripts/compile-routes.js",
    "generate-index": "npm run generate-structure && npm run generate-search",
    "build:anims": "node site/tooling/scripts/build-anims.js",
    "build:animcs": "node site/tooling/scripts/build-animcs.js",
    "build": "npm run generate-index && npm run build:anims",
    "check-generated": "npm run build && git diff --exit-code",
    "check-content": "node site/tooling/scripts/check-content.js",
    "test": "node --test"
  },
  "keywords": [
    "tmodloader",
    "tutorial",
    "terraria",
    "mod"
  ],
  "author": "DPapyru",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
